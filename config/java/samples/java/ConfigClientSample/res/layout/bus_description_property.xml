<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    >

    <!-- Bus path -->
    <TextView
        android:id="@+id/bus_path_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="@color/android:black"
        android:text="@string/bus_path_label"
        android:padding="5dp" />
    
    <TextView
        android:id="@+id/busPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bus_path_label"
        android:textColor="@color/android:black"
        android:padding="5dp" />
    
    <!-- Interfaces label -->
    <RelativeLayout        
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/bus_path_label"
        >
	    <TextView
	        android:id="@+id/bus_interfaces_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/android:black"
	        android:text="@string/bus_interfaces_label"
	        android:padding="5dp" />
	    <TextView
	        android:id="@+id/busInterfaces"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/bus_interfaces_label"
	        android:layout_alignBaseline="@id/bus_interfaces_label"        
	        android:textColor="@color/android:black"
	        android:padding="5dp" />
	</RelativeLayout>

</RelativeLayout>