<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#66515151"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/network_credentials_ssid_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="5dp"
        android:hint="@string/name_of_network_hint"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        android:contentDescription="network_credentials_ssid_editText"
        android:singleLine="true" />

    <Spinner
        android:id="@+id/network_credentials_layout_authType_spinner"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:drawablePadding="0dp"
        android:dropDownHorizontalOffset="0dp"
        android:dropDownVerticalOffset="1dp"
        android:dropDownWidth="fill_parent"
        android:contentDescription="network_credentials_layout_authType_spinner"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/network_credentials_password_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="5dp"
        android:hint="@string/wifi_password_hint"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        android:contentDescription="network_credentials_password_editText"
        android:singleLine="true" />

    <EditText
        android:id="@+id/network_credentials_timeout_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="5dp"
        android:hint="@string/timeout_hint"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:contentDescription="network_credentials_timeout_editText"
        android:singleLine="true" />

</LinearLayout>