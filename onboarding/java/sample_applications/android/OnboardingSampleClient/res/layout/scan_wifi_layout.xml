<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/session_list_layout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
     >

    <Button
        android:id="@+id/scan_wifi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:text="@string/Scan_WIFI_networks"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />
    
    <TextView 
        android:id="@+id/scan_wifi_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:text="@string/scan_wifi_text"
        android:layout_below="@id/scan_wifi"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        />
    
    <ListView
        android:id="@+id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/scan_wifi_text"
        android:layout_marginTop="14dp"
        android:background="@color/background_focused"
        android:cacheColorHint="@color/background_focused"
        android:visibility="visible">

    </ListView>
    
</RelativeLayout>
